package api.simpeg.controllers;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import api.simpeg.dao.AbsensiMobileDAO;

@RestController
public class AbsensiMobileRestController{
	
	@RequestMapping("/absensi_mobile/tambah")
	@ResponseBody
	int absensi_mobile_tambah(@RequestParam(value="id_pegawai") String id_pegawai, @RequestParam(value="status") String status, @RequestParam(value="long_lat") String long_lat, @RequestParam(value="api_key") String api_key){
		ApplicationContext ctx = new ClassPathXmlApplicationContext("spring.xml");
        AbsensiMobileDAO absmDAO = ctx.getBean("absensiMobileDAO", AbsensiMobileDAO.class);
       // Double long_latrequired = Double.parseDouble(long_lat);
        int stts = absmDAO.tambah(id_pegawai, status, long_lat, api_key);
        
        return stts;
	}
}